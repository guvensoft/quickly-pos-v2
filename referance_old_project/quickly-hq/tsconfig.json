{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": false,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "allowSyntheticDefaultImports": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "types": [
            "node"
        ],
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        },
        "lib": [
            "esnext"
        ]
    },
    "exclude": [
        "src/integration/**/*"
    ],
    "include": [
        "src/**/*"
    ]
}